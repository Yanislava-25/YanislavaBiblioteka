@model IEnumerable<Biblioteka.Data.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearPublish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @(item.Authors.FirsrName + " " + item.Authors.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Presses.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genres.Name)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" width="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearPublish)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
